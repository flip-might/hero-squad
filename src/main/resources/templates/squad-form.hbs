{{#partial "content"}}
    <div class="container">
        {{#if editSquad}}
            <div class="card">
                <div class="card-header">
                    <h3>Edit this squad!</h3>
                </div>
                <div class="card-body">
                    <form action="/squads/{{squad.id}}" method="post">
                        <div class="form-group">
                            <label for="newName">Edit this squad's name</label>
                            <input id="newName" name="newName" type="text" class="form-control" value="{{squad.name}}">
                        </div>
                        <div class="form-group">
                            <label for="newSize">Edit this squad's size</label>
                            <input id="newSize" name="newSize" type="number" class="form-control"  value="{{squad.size}}">
                        </div>
                        <div class="form-group">
                            <label for="newCause">Edit this squad's cause</label>
                            <input id="newCause" name="newCause" type="text" class="form-control"  value="{{squad.cause}}">
                        </div>
                        <button type="submit" class="btn btn-default">Go!</button>
                    </form>
                </div>
            </div>
        {{else}}
            <div class="card">
                <div class="card-header">
                    <h3>Add a new squad!</h3>
                </div>
                <div class="card-body">
                    <form action="/squads/new" method="post">
                        <div class="form-group">
                            <label for="name">Squad Name</label>
                            <input id="name" name="name" class="form-control" type="text" >
                        </div>
                        <div class="form-group">
                            <label for="size">Max Size</label>
                            <input id="size" name="size" type="number" class="form-control"  >
                        </div>
                        <div class="form-group">
                            <label for="cause">Cause</label>
                            <input id="cause" name="cause" type="text" class="form-control" >
                        </div>
                        <button style="color: dodgerblue" type="submit" class="btn btn-default">Go!</button>
                    </form>
                </div>
            </div>
        {{/if}}
    </div>
{{/partial}}

{{> layout.hbs}}