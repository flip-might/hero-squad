{{#partial "content"}}
    {{#if squads}}
        <div class="container">
            <div class="row">
                <h3 style="color: aliceblue">Squads</h3>
                <table class="table table-dark">
                    <div class="container">
                    <tbody>
                    {{#each squads}}
                        <tr>
                            <td>Id:<span></span>{{id}}</td>
                            <td>Name:<span></span>{{name}}</td>
                            <td>Details:<span></span><a href="/squads/{{id}}" class="btn btn-secondary">Details</a></td>
                        </tr>
                    {{/each}}
                    </tbody>
                    </div>
                </table>
                <a href="/squads/delete" class="btn btn-danger">Delete all squads</a><br>
            </div>
        </div>
    {{else}}
         <h1 style="color: red">No Squads Found</h1>
    {{/if}}
{{/partial}}

{{> layout.hbs}}