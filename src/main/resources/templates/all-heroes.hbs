{{#partial "content"}}
    {{#if heroes}}
        <div class="container">
            <div class="row">
                <h3 >Available heroes</h3>
                <div class="container">
                <table class="table table-dark">

                    <tbody>
                    {{#each heroes}}
                        <tr>

                            <td>Id:<span></span>{{id}}</td>

                            <td>Name:<span></span>{{name}}</td>

                            <td>Details: <span></span><a href="/heroes/{{id}}" class="btn btn-secondary">Details</a></td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
                <a href="/heroes/delete" class="btn btn-danger">Delete all heroes</a><br>
                </div>
            </div>
        </div>

    {{else}}
        <h1 style="color: red">No Heroes Found</h1>
    {{/if}}
{{/partial}}

{{> layout.hbs}}


